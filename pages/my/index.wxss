.container {
	display: flex;
  	flex-direction: column;
  	align-items: stretch;
  	box-sizing: border-box;
 	padding-top: 10rpx; 
}

.block {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 120rpx;
	margin-bottom: 10rpx; 
}

.left {
	width: 20%;
	height: 100%;
	padding: 5rpx;
	box-sizing: border-box;
}

.left image {
	width: 100%;
	height: 100%;
}

.right {
	flex: 1;
	height: 100%;
	border-bottom: 1px solid #eee;
	box-sizing: border-box;
	display: flex;
}

.content {
	padding: 10rpx;
	height: 100%;
	width: 90%;
	box-sizing: border-box;
}

.fav-name {
	font-size: 16px;
}

.fav-count {
	font-size: 12px;
	color: #999;
}