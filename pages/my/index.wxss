.container {
	display: flex;
  	flex-direction: column;
  	align-items: stretch;
 	padding-top: 10rpx; 
}

.block {
	display: flex;
	flex-direction: row;
	width: 100%;
	height: 110rpx;
	margin-bottom: 10rpx; 
}

.left {
	width: 15%;
	height: 100%;
	padding: 5rpx;
	margin:0 10rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: center;
	background-color: black;
}

.left image {
	width: 100%;
	height: 100%;
}

.left .default {
	width: 70%;
	height: 70%;
}

.right {
	flex: 1;
	height: 100%;
	border-bottom: 1px solid #eee;
}

.fav-name {
	font-size: 16px;
}

.fav-count {
	font-size: 12px;
	color: #999;
}